<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Import Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Import Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    
    <!-- Import index css -->
    <link href="http://localhost:3000/static/style/classificator.css" rel="stylesheet">
    
    <!-- Import JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
    <!-- Import full JQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>

    <title>Classificator</title>
</head>
<body onload="initMainCanvas(canvas, ctx, 28, 28); initGridCanvas(gridCanvas, gridCtx, 28, 28)">
   

    <%- include('./components/navbar.ejs') %>

    <div class="container">
        <div class="info-container">
            <div class="card left-container">
                <div class="canvas-controls-container d-flex justify-content-between">
                    <div class="canvas-controls">
                        <button id="grid-control" onclick="toggleMode('grid')" class="btn btn-control btn-active-state shadow-none"><i class="bi bi-grid-3x3"></i></button>
                        <button id="brush-control" onclick="toggleMode('brush')" class="btn btn-control btn-active shadow-none"><i class="bi bi-brush"></i></button>
                        <button id="eraser-control" onclick="toggleMode('eraser')" class="btn btn-control shadow-none"><i class="bi bi-eraser"></i></button>
                        <button id="clear-control" onclick="promptClear()" class="btn btn-control btn-clear shadow-none"><i class="bi bi-trash"></i></button>
                        <button id="train-control" onclick="toggleMode('train')" class="btn btn-control btn-train shadow-none"><i class="bi bi-arrow-repeat"></i></button>
                        <input disabled type="number" id="train-input" class="label-input" placeholder="Epochs" min="0" max="9" value="1">
                    </div>
                    <div class="canvas-controls">
                        <button id="classify-control" onclick="colorInvert(); classify()" class="btn btn-control btn-classify shadow-none"><i class="bi bi-arrow-right"></i></button>
                    </div>
                </div>
                <div class="canvas-grid-container">
                    <canvas class="canvas" id="mainCanvas"></canvas>
                    <canvas class="canvas" id="gridCanvas"></canvas>
                </div>
            </div>
            <div class="card right-container">
                <h1>ITS Character Classificator</h1>
                <div class="response-output">
                    <p id="result">2</p>
                </div>
            </div>
        </div>
    </div>

    

    <script src="http://localhost:3000/static/js/canvas.js"></script>
    <script src="http://localhost:3000/static/js/classificator.js"></script>

    <%- include('./components/footer.ejs') %>
</body>
</html>