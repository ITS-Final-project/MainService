<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Import Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Import Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <!-- Import admin classificator css -->
    <link href="http://localhost:3000/static/style/classificator_structure.css" rel="stylesheet">
    
    <!-- Import background gradient css -->
    <link href="http://localhost:3000/static/style/background.css" rel="stylesheet">
    
    <!-- Import background master css -->
    <link href="http://localhost:3000/static/style/master.css" rel="stylesheet">
    
    <!-- Import JS bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Import full JQuery -->
    <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>

    <!-- Import master js -->
    <script src="http://localhost:3000/static/js/master.js"></script>

    <title>Admin - CStructure</title>
</head>
    <body onload="loadAnimationState()">

        <style>
            .log-grid {
                display: grid;
                grid-template-columns: auto auto auto;
                grid-gap: 1rem;
            }

            .log-list-card{
                height: 100%;
            }

            .inner-body{
                max-height: 60vh;
            }

            .main-card{
                margin: auto;
            }
        </style>

        <%- include('./components/navbar.ejs') %>

        <div class="container">
            <div class="container w-100 transition-container">
                <div class="card main-card mx-auto">
                    <div class="card-header">
                        <h1><i class="bi bi-card-list"></i> Lista logova</h1>
                    </div>
                    <div class="d-flex justify-content-center log-grid mt-3 mb-3">
                        <div class="card log-list-card">
                            <!-- Main Service logs -->
                            <div class="card-header">
                                <h4 class="display-6"><i class="bi bi-journal-code"></i> Main Service</h4>
                            </div>
                            <div class="inner-body overflow-auto">
                                <ul class="list-group list-group-flush" id="ms">
                                    <!-- <li class="list-group-item p-0 d-flex justify-content-between align-items-center">
                                        <a href="#" class="list-group-item list-group-item-action">Some very </a>
                                    </li> -->
                                </ul>
                            </div>
                        </div>
                        <div class="card log-list-card h-100">
                            <!-- User Service logs -->
                            <div class="card-header">
                                <h4 class="display-6"><i class="bi bi-journal-code"></i> User Service</h4>
                            </div>

                            <div class="list-group overflow-auto">
                                <ul class="list-group list-group-flush" id="us">
                                    
                                </ul>
                            </div>

                        </div>
                        <div class="card log-list-card h-100">
                            <!-- AI Service logs -->
                            <div class="card-header">
                                <h4 class="display-6"><i class="bi bi-journal-code"></i> AI Service</h4>
                            </div>
                            <div class="inner-body overflow-auto">
                                <ul class="list-group list-group-flush" id="ai">
                                    
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="http://localhost:3000/static/js/logs.js"></script>

        <%- include('./components/footer.ejs') %>
    </body>
</html>